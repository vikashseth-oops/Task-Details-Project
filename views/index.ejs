<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Document</title>
</head>

<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form px-20 py-10 text-white">
            <form action="/create" method="post">
                <input class="block w-full rounded-md px-10 py-2 bg-zinc-700" type="text" placeholder="Title"
                    name="title">
                <textarea class="block w-full rounded-md px-12.5 py-8 mt-2 resize-none bg-zinc-700"
                    placeholder="Write your task here.." name="details"></textarea>
                <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md" type="submit" value="Create Task">
            </form>
        </div>
        <div class="tasks px-20 py-10 flex gap-3 flex-wrap">
            <% if(files.length> 0){ %>
                <% files.forEach(function(val){ %>
                    <div class="task min-w-72 px-3 py-4 
                            rounded-md bg-zinc-800 ">
                        <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
                        <div class="flex w-full justify-between items-center mt-3">
                            <a class="text-blue-500 inline-block" href="./files/<%= val %>">Read More.</a>
                            <a class="text-zinc-600" href="/edit/<%= val %>">Edit Filename</a>
                        </div>
                    </div>
                    <% }) %>
                        <% } else { %>
                            <h3 class="text-zinc-600">No task yet.</h3>
                            <% } %>
        </div>
</body>

</html>